<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products</title>
</head>
<body>
  <header>
    <h1>Our Products</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </nav>
  </header>

  <h2>All Products</h2>
  <ul>
    <% products.forEach(product => { %>
      <li>
        <h3><%= product.name %></h3>
        <p>Price: $<%= product.price %></p>
        <p>Category: <%= product.category %></p>
        <button>Add to Cart</button> <!-- Could trigger an action to add product to cart -->
      </li>
    <% }) %>
  </ul>
</body>
</html>

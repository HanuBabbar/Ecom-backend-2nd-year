<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Dashboard</title>
</head>
<body>
  <header>
    <h1>Welcome to Your Dashboard, <%= user.username %></h1> <!-- Displaying the logged-in user's name -->
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/profile">Profile</a>
      <a href="/logout">Logout</a>
    </nav>
  </header>

  <section>
    <h2>Your Recent Orders</h2>
    <% if (orders.length > 0) { %>
      <ul>
        <% orders.forEach(order => { %>
          <li>
            <h3>Order ID: <%= order._id %></h3>
            <p>Ordered on: <%= new Date(order.date).toLocaleDateString() %></p>
            <p>Status: <%= order.status %></p>
            <p>Total: $<%= order.total %></p>
            <button>View Order Details</button> <!-- Could link to a detailed order page -->
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>You have no recent orders yet.</p>
    <% } %>
  </section>

  <section>
    <h2>Your Profile</h2>
    <p>Email: <%= user.email %></p>
    <p>Account Created on: <%= new Date(user.createdAt).toLocaleDateString() %></p>
  </section>

  <footer>
    <p>Â© 2025 E-Commerce Platform. All Rights Reserved.</p>
  </footer>
</body>
</html>
